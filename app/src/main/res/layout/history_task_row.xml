<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/image_size5"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_margin="@dimen/image_size5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textSize="@dimen/image_size20"
                android:textStyle="bold"
                android:id="@+id/tvTitleHis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/toolbarcolor"
                android:text="Geofence"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/toolbarcolor"
                    android:text="Assign Date: "/>

                <TextView
                    android:id="@+id/tvAssignDateHis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/toolbarcolor"
                    android:text="2017-09-21 13:07:24"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/toolbarcolor"
                    android:text="Deadline Date: "/>

                <TextView
                    android:id="@+id/tvDeadlineHis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/toolbarcolor"
                    android:text="07 September 2017 - 10:50"/>

            </LinearLayout>



        </LinearLayout>

    </android.support.v7.widget.CardView>




</RelativeLayout>